{
  "expo": {
    "name": "Kontify",
    "slug": "kontify-app",
    "scheme": "kontify",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/images/logo.png",
    "userInterfaceStyle": "automatic",
    "newArchEnabled": true,
    "sdkVersion": "54.0.0",
    "ios": {
      "supportsTablet": true
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/images/logo.png",
        "backgroundColor": "#ffffff"
      },
      "permissions": [
        "android.permission.RECORD_AUDIO",
        "android.permission.CAMERA",
        "android.permission.READ_EXTERNAL_STORAGE",
        "android.permission.WRITE_EXTERNAL_STORAGE"
      ],
      "package": "com.desibarra.onspaceapp"
    },
    "plugins": [
      "expo-router",
      [
        "expo-splash-screen",
        {
          "image": "./assets/images/logo.png",
          "imageWidth": 200,
          "resizeMode": "contain",
          "backgroundColor": "#ffffff"
        }
      ]
    ],
    "extra": {
      "router": {},
      "eas": {
        "projectId": "49d21666-13e1-4be8-bfbf-8693d8b88259"
      }
    },
    "owner": "desibarra",
    "web": {
      "favicon": "./assets/images/favicon.png",
      "name": "Kontify - Expertos Fiscales y Legales",
      "shortName": "Kontify",
      "description": "Conecta con abogados, contadores y expertos verificados al instante con ayuda de IA.",
      "themeColor": "#92BF4E",
      "backgroundColor": "#000000",
      "bundler": "metro",
      "output": "static"
    }
  }
}
